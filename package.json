{
  "name": "versionbump",
  "version": "1.0.2",
  "main": "index.js",
  "repository": "git@github.com:sinnerr0/versionbump.git",
  "author": "kyongsikC <sinnerr0@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "standard-version": "^9.3.2"
  },
  "scripts": {
    "release:first": "standard-version -f -t ''",
    "release:major": "standard-version -t '' -r major && git push --tags",
    "release:minor": "standard-version -t '' -r minor && git push --tags",
    "release:patch": "standard-version -t '' -r patch && git push --tags"
  },
  "standard-version": {
    "issueUrlFormat": "https://green-labs.atlassian.net/browse/{{id}}"
  }
}
