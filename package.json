  "license": "MIT",
  "dependencies": {
    "standard-version": "^9.3.2"
  },
  "scripts": {
    "release:first": "standard-version -f -t ''",
    "release:major": "standard-version -t '' -r major",
    "release:minor": "standard-version -t '' -r minor",
    "release:patch": "standard-version -t '' -r patch"
  },
  "standard-version": {
    "issueUrlFormat": "https://green-labs.atlassian.net/browse/{{id}}"
  }
}
